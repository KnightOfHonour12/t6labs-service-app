<?xml version="1.0" encoding="utf-8"?>
<navigation
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/locals_home_navigation_entry_point"
  app:startDestination="@id/localsHomeFragment">

    <!-- same name as the id of the bottom navigation item -->
    <fragment
        android:id="@+id/localsHomeFragment"
        android:name="com.t6labs.locals.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/content_home">
            <action
                android:id="@+id/action_home_fragment_to_DescriptionFragment"
                app:destination="@id/listingDescriptionFragment" />
    </fragment>

    <fragment
        android:id="@+id/listingDescriptionFragment"
        android:name="com.t6labs.locals.ListingDescriptionFragment"
        android:label="content_description"
        tools:layout="@layout/content_description">

        <argument
            android:name="listingId"
            app:argType="string"
            android:defaultValue="1"/>
    </fragment>

    <!-- same name as the id of the bottom navigation item -->
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.t6labs.locals.NewListingFragment"
        android:label="new listing"
        tools:layout="@layout/content_new_listing" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.t6labs.locals.MapsFragment"
        android:label="map lookup"
        tools:layout="@layout/content_maps" />

    <fragment
        android:id="@+id/navigation_favourite"
        android:name="com.t6labs.locals.FavouritesFragment"
        android:label="favourites"
        tools:layout="@layout/content_favourites" />
</navigation>
